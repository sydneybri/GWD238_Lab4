<!doctype html>
<html>
<head>
<meta charset="UTF-8">
<title>Sydney Carter's Lab 4</title>

<style>

	#main a{
		font: 1.5em/1.2 "Trebuchet MS", Arial, Helvetica, sans-serif;
		color: #FB69AA;
		margin: .5em;
	}
	
	#albums a{
		font: 1.5em/1.2 "Trebuchet MS", Arial, Helvetica, sans-serif;
		color: #666;
		margin: .5em;
	}
	
	#pic{
		width: 300px;
		height: 300px;
	}
	
	#caption{
		font: 1em/.8 "Trebuchet MS", Arial, Helvetica, sans-serif;
		color: #000;
		margin: .5em;
	}
	
	.hide{
		display: none;
	}

</style>

</head>

<body>

	<nav id="albums">
    <!--Using in-page anchors for album nav-->
    	<a href ="#album1" title="Hello Kitty">Hello Kitty</a>
        <a href ="#album2" title="Badtz Maru">Badtz Maru</a>
        <a href ="#album3" title="Chococat">Chococat</a>
    </nav>

	<nav id="main">
    	<div id="album1">
            <a href ="images/kitty1.jpg" title="Hello Kitty is ready to roam around town.">Hello Kitty One</a>
            <a href ="images/kitty2.jpg" title="Hello Kitty is ready for her costume party.">Hello Kitty Two</a>
            <a href ="images/kitty3.jpg" title="Hello Kitty is ready to defend her friends.">Hello Kitty Three</a>
        </div>
        
        <div id="album2">
            <a href ="images/maru1.jpg" title="Badtz Maru is a goofy little guy.">Badtz Maru One</a>
            <a href ="images/maru2.jpg" title="Badtz Maru enjoys playing hide and seek.">Badtz Maru Two</a>
            <a href ="images/maru3.jpg" title="Badtz Maru and Hello Kitty are friends.">Badtz Maru Three</a>
        </div>
        
        <div id="album3">
            <a href ="images/cat1.jpg" title="Chococat says hello!">Chococat One</a>
            <a href ="images/cat2.jpg" title="Chococat loves to do the happy dance.">Chococat Two</a>
            <a href ="images/cat3.jpg" title="Chococat sends tons of love to Hello Kitty.">Chococat Three</a>
        </div>
    </nav>
    
    <img id="pic" src="images/kitty1.jpg" alt="Hello Kitty image" />
    
    <p id="caption"> Hello Kitty is ready to roam around town. </p>

	<script>
		
		//Place image gallery functions into object literal
		var gallery = {
		
			//First thing we need to do is attach event handlers to links for functionality of gallery
			init: function(e)
			{
				var links = document.querySelectorAll("#main a");
				
				//Collect all anchor tags in nav
				for(var i = 0; i < links.length; i++)
				{
					//Add event handlers onto each anchor tag
					links[i].onclick = gallery.changePic;
				}
				
				//Set-up links in albums nav
				var albums = document.querySelectorAll("#albums a");
				
				for(var j = 0; j < albums.length; j++)
				{
					albums[j].onclick = gallery.changeAlbum;
				}
				
				//Hide all album links
				var divs = document.querySelectorAll("#main div");
				for(var k = 0; k < divs.length; k++)
				{
					divs[k].classList.add("hide");
				}
				
				divs[0].classList.remove("hide");
			},
			
			//Function runs when anchor tag (link) clicked by user
			changePic: function(e)
			{
				var pic = document.querySelector("#pic");
				var caption = document.querySelector("#caption");
				//Prevents HTML element's default behavior
				e.preventDefault();
				//Change picture
				pic.src = e.target.href;
				//Change caption
				caption.firstChild.nodeValue = e.target.title;
			},
			
			changeAlbum: function(e)
			{
				var divs = document.querySelectorAll("#main div");
				var target = '#' + e.target.href.split('#')[1];
				var album = document.querySelector(target);
				var links = album.querySelectorAll("a");
				var src = links[0].href;
				var pic = document.querySelector("#pic");
				var title = links[0].title;
				var caption = document.querySelector("#caption");
				
				//Prevents HTML element's default behavior
				e.preventDefault();
				//Hide all albums
				for(var i = 0; i < divs.length; i++)
				{
					divs[i].classList.add("hide");
				}
				//Reveal album
				album.classList.remove("hide");
				//Change pic to first album pic when user selects album
				pic.src = src;
				//Change caption to first album pic caption
				caption.firstChild.nodeValue = title;
				
			}
		}
		
		window.onload= gallery.init;
	
	</script>

</body>
</html>
